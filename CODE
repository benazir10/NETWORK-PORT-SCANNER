import argparse
import nmap

def argument_parser():
    parser = argparse.ArgumentParser(description="TCP port scanner. Accept a hostname/IP address and list of ports to "
                                                 "scan. Attempts to identify the service running on a port.")
    parser.add_argument("-o", "--host", nargs="?", help="Host IP address")
    parser.add_argument("-p", "--port", nargs="?", help="Comma-separated port list, such as '25,80,8000'")
    var_args = vars(parser.parse_args())
    return var_args

